
data "template_file" "json_config" {
    
    template = <<EOF
{
    "endpoint": "${module.my_cluster.cluster_endpoint}",
    "securitygroup": "${module.my_cluster.cluster_security_group_id}",
    "kubectl_config": "${module.my_cluster.kubeconfig}"
    

}
EOF
}



resource "local_file" "environment1" {
    content = "${data.template_file.json_config.rendered}"
    filename = "../terraform/modules_data/k8s-manager-ksc/json.secret"
    file_permission = "0400"
}  



output "kubectl_config" {
  description = "kubectl config as generated by the module."
  value       = module.my_cluster.kubeconfig
}
